{
    "src_folders" : ["../../test/e2eTest/"],
    "filter" : "*.js",
    "custom_commands_path": ["../../test/e2eTest/customCommands"],
    "globals_path": "../../test/e2eTest/globalModule.js",
    "webdriver" : {
      "start_process": true,
      "server_path": "node_modules/.bin/chromedriver",
      "port": 9515
    },

    "test_settings" : {
      "default" : {
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions": {
            "args": ["--headless", "window-size=1280,800"]
          }
        }
      }
    },
    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "chromeOptions" : {
        "args" : ["disable-web-security", "user-data-dir"]
      }
    }
  }