{
    "src_folders" : ["../../test/e2eTest/"],
    "filter" : "*.js",
    "custom_commands_path": ["../../test/e2eTest/customCommands"],
    "globals_path": "../../test/e2eTest/globalModule.js",
    "launch_url": "http://localhost:8888/",
    "webdriver" : {
      "start_process": true,
      "server_path": "node_modules/.bin/chromedriver",
      "port": 9515
    },

    "test_settings" : {
      "default" : {
        "globals": {
            "launchUrl": "http://localhost:8888/"
        },
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions": {
            "args": ["--headless", "window-size=4000,2000"]
          }
        }
      },
      "jenkins": {
        "globals": {
            "launchUrl": "https://localhost:8443/"
        },
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions": {
            "args": ["--headless", "window-size=5000,2000"]
          }
        }
      }
    },
    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "chromeOptions" : {
        "args" : ["disable-web-security", "user-data-dir"]
      }
    }
  }