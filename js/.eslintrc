{   
    // rules mode: 0 = turn off, 1 = warning, 2 = error
    "rules": {
        "strict": 0, // not using stric mode
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [  // No quotes checking
            0
        ],
        "semi": [
            1,
            "always"
        ],
        "no-undef": 0,  // temporarily not checking global function undefined
        "no-extra-semi": 2,
        "no-multi-spaces": [
            1, {
                "exceptions": {
                    "VariableDeclarator": true
                }
        }],
        "no-use-before-define": [
            2,
            "nofunc"
        ],
        "no-loop-func": 1,
        "no-trailing-spaces": [
            2, 
            { 
                "skipBlankLines": true 
            }
        ],
        "no-redeclare": 1,
        "no-console": 1, // use of console
        "no-alert": 1,  // use of alert
        "no-extra-bind": 1,
        "eqeqeq": [   // use === and !== but allow == null/undefined
            2,
            "smart",
            "allow-null"
        ],
        "key-spacing": [
            1, {
                "align": "colon",
                "beforeColon": false,
                "afterColon": true
        }],
        "space-after-keywords": [
            2,
            "always",
        ],
        "new-cap": [
            2,
            "capIsNew": false // allow function to be uppercase
        ]
    },
    "env": {
        "browser": true,
        "jquery" : true
    }
}